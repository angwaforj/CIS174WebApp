@model System.Collections.Generic.ICollection<CIS174WebApp.ViewModel.AuthorSummaryViewModel>

<h2>Author Summary</h2>
<hr/>
<div class="table-responsive">
    <table class="table table-striped ">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Number of Books</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.NumberOfBooks</td>
                <td><a asp-action="View" asp-route-id="@author.AuthorId" class="btn btn-primary">View</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>
<a asp-action="Create" class="btn btn-success">Create new Author</a>
